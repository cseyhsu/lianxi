<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    app:behavior_hideable="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--BottomNavigationBar 底部导航条-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_navigation"
        android:layout_gravity="center"
        android:text="底部导航条"

        android:onClick="navigation"
       />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="bottom sheet recycler "
        android:onClick="bottomSheet"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="linear bottom sheet 线性"

        android:onClick="linearBottomSheet"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="view page 做界面导航"

        android:onClick="viewPage"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="bottom sheet dialog"
        android:onClick="bottomsheetdialog"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="view Page 和 bottom navigation bar 结合"

        android:onClick="viewpage_bottomNavigation"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="bottom view 和 viewpager"

        android:onClick="bottomViewViewPager"
        />


    <!--<include layout="@layout/bottom_sheet"/>-->

</LinearLayout>